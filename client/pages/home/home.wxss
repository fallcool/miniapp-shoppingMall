@import "../../template/products/products-tpl.wxss";
.swiper{
    height:400rpx;
    width:100%;
}
.swiper-item{
    height:100%;
    width:100%;
}

.swiper-box{
    overflow-x: hidden;
}

.banner-item{
    height:100%;
    width:100%;
}
.banner-item image{
    height:100%;
    width:100%;
}

.home-main-header {
    display:flex;
    height:60rpx;
    color:#AB956D;
    background-color:#fff;
    font-size:32rpx;
    align-items:center;
    justify-content:center;
}

.theme-box{
    display:flex;
    flex-wrap:wrap;
    background:#f6f6f6;
    width:100%;
    padding-left:20rpx;
    flex-direction:row;
}

.theme-item {
    height:270rpx;
    width:100%;
    border-radius:10px;
    padding-top:10rpx;
    background:#fff;
    position:relative;
    padding-right:29rpx;
    box-sizing:border-box;
}


.theme-item .theme-img {
    width:100%;
    height:100%;
}

.theme-item .theme-text{
    position: absolute; 
    left:0rpx;
    bottom:0rpx;
    width:100%;
    text-align:center;
    height:40rpx;
    color:#fff;
    padding-bottom:20rpx;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    background-image: -webkit-linear-gradient(top, rgba(255,255, 255, 0) 0%, rgba(0,0, 0, 0.6) 100%);
}

.theme-box .theme-img image{
    width:100%;
    height:100%;
    border-radius:10rpx;
}

.theme-box:first-child{
    border-right:4rpx solid #fff;
}

.theme-item.big {
    width:100%;
}

.theme-item.big .theme-icon view {
  margin: 0 auto;
  width: 150rpx;
  height: 60rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
  border:1rpx solid #fff;
  text-align: center;
  font-size: 24rpx;
}

.theme-item image {
    width:100%;
    height:270rpx;
}

.theme-icon{
    margin-top:10rpx;
    height: 48rpx;
}
.theme-icon image{
    height: 48rpx;
    width: 48rpx;
}

.home-main-footer{
    display:flex;
    height:60rpx;
    color:#AB956D;
    background-color:#f7f7f7;
    font-size:32rpx;
    align-content:center;
    justify-content:center;
    margin:20rpx 0;
}
