<import src="../../template/products/products-tpl.wxml"/>
<view class="container">
  <view class="header">
    <view class="search-container">
      <image class="icon" src="images/search.png" />
      <input placeholder-class='in-bar' placeholder='商品名' class='bar' bind:confirm="onConfirm" value="{{q}}" auto-focus="true" />
      <image bind:tap="onDelete" class="cancel-img" src="images/cancel.png" />
    </view>
    <view class='cancel'  bind:tap="onCancel">取消</view>
  </view>
  <view wx:if="{{!finished}}">
    <view class="history">
      <view class="title">
        <view class="chunk"></view>
        <text>历史搜索</text>
        <text bindtap="onCancelSearch" class="title-right">清空历史</text>
      </view>
      <view class="tags">
        <!-- <tag-cmp bind:tapping="onConfirm" wx:for="{{historyKeys}}" text="{{item}}" /> -->
        <block class="tags-container" wx:for="{{historyKeys}}">
          <view bind:tap="onTap" data-text="{{item}}" class="tag-class">
            <text>{{item}}</text>
            <view class="after"></view>
          </view>
        </block>
      </view>
    </view>
    <view class="history hot-search">
      <view class="title">
        <view class="chunk"></view>
        <text>热门搜索</text>
      </view>
        <view class="tags">
          <block class="tags-container" wx:for="{{hotKeys}}">
            <view bind:tap="onHostkey" data-text="{{item.text}}" class="tag-class">
              <text>{{item.text}}</text>
              <view class="after"></view>
            </view>
          </block>
        </view>
    </view>
  </view>
  <view class="loadingData loading" wx:if="{{loading}}" >
      <view class="double-bounce1"></view>
      <view class="double-bounce2"></view>
  </view>
  <view class="loadingData loading-center" wx:if="{{loadingCenter}}">
      <view class="double-bounce1"></view>
      <view class="double-bounce2"></view>
  </view>
  <text wx:if="{{empty}}" class="empty-tip">没有搜索相关内容</text>
</view>