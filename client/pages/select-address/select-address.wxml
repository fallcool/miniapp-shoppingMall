<view class="container select-address-container">
  <view class="address-list">
    <view wx:if="{{addressList.length>0}}">
      <block wx:for="{{addressList}}">
          <view class="a-address">
            <view data-id="{{item._id}}" class="left-text {{item.isDefault?'active':''}}" bindtap="selectTap">
              <view class="name-tel">
                {{item.name}} {{item.mobile}}
              </view>
            </view>
            <view class="address-box">
              {{item.address}}
            </view>
            <view class="right-edit" bindtap="editAddress" data-id="{{item._id}}"></view>
          </view>
      </block>
    </view>
  </view>
  <view class="bottom-box">
    <view class="add-btn" bindtap="addAddress">新增收货地址</view>
  </view>
</view>