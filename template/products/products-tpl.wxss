.products-box{
    margin:0 20rpx 20rpx 20rpx;
    display:flex;
    flex-wrap:wrap;
    justify-content:space-between;
}

.products-item {
    display:inline-block;
    min-height:425rpx;
    width:48%;
    border-radius:10rpx;
    background:#F5F6F5;
    text-align:center;
    margin:0 8rpx 8rpx 8rpx;
}

.products-image{
    width:100%;
    height:375rpx;
    border-radius:10rpx;
}

.products-item-bottom{
    text-align:center;
    margin-bottom:20rpx;
    color:#333;
}

.products-item-bottom .name{
    font-size:18rpx;
}

.products-item-bottom .price{
    font-size:24rpx;
}
